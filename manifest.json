{
  "manifest_version": 3,
  "name": "Felix",
  "description": "Mark your task tracker links everywhere you need!",
  "version": "2.0.0",

  "action": {
    "default_popup": "src/options.html",
    "default_icon": {
      "16": "assets/images/felix@16.png",
      "24": "assets/images/felix@48.png",
      "32": "assets/images/felix@32.png"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["assets/images/felix.svg", "assets/images/st.svg", "assets/icons/*.svg"],
      "matches": ["<all_urls>"]
    }
  ],

  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "clipboardRead",
    "<all_urls>"
  ],

  "options_ui": {
    "page": "src/options.html"
  },

  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "css": ["src/contentStyles.css"],
      "js": ["src/contentScript.js"]
    }
  ],

  "icons": {
    "16": "assets/images/felix@16.png",
    "48": "assets/images/felix@48.png",
    "96": "assets/images/felix@128.png",
    "128": "assets/images/felix@128.png"
  }
}
