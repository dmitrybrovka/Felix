{
  "manifest_version": 2,
  "name": "Felix",
  "version": "1.3.1",

  "browser_action": {
    "default_icon": {
      "16": "assets/images/felix@16.png",
      "24": "assets/images/felix@48.png",
      "32": "assets/images/felix@32.png"
    }
  },

  "web_accessible_resources": [
    "assets/images/*.svg"
  ],

  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "clipboardRead",
    "<all_urls>"
  ],

  "options_ui": {
    "page": "src/options.html"
  },

  "background": {
    "scripts": ["src/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "css": ["src/contentStyles.css"],
      "js": ["src/contentScript.js"]
    }
  ],

  "icons": {
    "16": "assets/images/felix@16.png",
    "48": "assets/images/felix@48.png",
    "96": "assets/images/felix@128.png",
    "128": "assets/images/felix@128.png"
  }
}
